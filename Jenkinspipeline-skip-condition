pipeline {
    agent any
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            when {
               branch 'prakash'                 //jenkins will check branch if branch not found then skip the stage
            }
            steps {
                echo 'Deploying to prod'
            }
        }
    }
}
